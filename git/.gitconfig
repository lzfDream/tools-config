[user]
	email =
	name =

[init]
	defaultBranch = master

# 中文支持
[core]
	quotepath = false
	autocrlf = false # 关闭自动修改行尾符
[i18n]
	logoutputencoding = utf-8
	commitencoding = utf-8

# 开启颜色
[color]
	ui = true

# 合并冲突diff风格
[merge]
	conflictstyle = diff3

# 默认仅推送当前分支
[push]
	default = simple
	autoSetupRemote = true

# 记住密码
[credential]
	helper = store

# 自动修正指令
[help]
	autocorrect = 1

# 指令别名
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status
	co = checkout
	cob = checkout -b
	ci = commit
	cim = commit -m
	b = branch
	db = branch -D
	p = pull -p
	a = add
	aa = add --all :/
	diffc = diff --cached
	clear = reset --hard
	ig = update-index --assume-unchanged
	igc = update-index --no-assume-unchanged
